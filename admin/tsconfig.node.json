{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.ts",
    "src/app.config.ts",
    "src/constant/default/menu.ts",
    "src/router/default.ts",
    "build/*.ts",
    "build/generate.js"
  ],
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "ESNext",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"]
  }
}
