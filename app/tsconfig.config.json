{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "verbatimModuleSyntax": true,
    "composite": true,
    "module": "esnext",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/app.config.ts",
    "src/constant/default/menu.ts",
    "src/router/default.ts",
    "build/*.ts",
    "vite.config.*",
    "vitest.config.*"
  ]
}
